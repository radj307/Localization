<Window
    x:Class="XamlHotReloadTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:Localization;assembly=Localization"
    xmlns:local="clr-namespace:XamlHotReloadTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="350"
    Height="150"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Tr 'MainWindow.Text'}" />

        <!--  Uncomment this:  -->
        <TextBlock Grid.Row="1" Text="This doesn't show up until you restart the application" />

        <ComboBox
            Grid.Row="2"
            DataContext="{Binding Source={x:Static loc:Loc.Instance}}"
            ItemsSource="{Binding AvailableLanguageNames}"
            SelectedItem="{Binding CurrentLanguageName}" />
    </Grid>
</Window>
